<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    >
    
    <TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:id="@+id/in_parternship"
        android:text="@string/in_partnership_with"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        style="@android:style/TextAppearance.Medium"
        />
    
    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/in_parternship"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        >
        
        <ImageView 
	   	    android:layout_width="0dp"
	   	    android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:maxHeight="100dp"
		    android:adjustViewBounds="true"
		    android:src="@drawable/tpw_1024"
		    android:layout_gravity="center"
           />

             <LinearLayout
             	android:layout_width="0dp"
             	android:layout_height="fill_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                >
        
                <ImageView 
                       android:layout_width="wrap_content"
                       android:layout_height="0dp"
                       android:layout_weight="2"
                       android:adjustViewBounds="true"
                       android:src="@drawable/natureserve_logo_inline"
                       android:layout_gravity="center_horizontal"
                   />
                <ImageView 
                       android:layout_width="wrap_content"
                       android:layout_height="0dp"
                       android:layout_weight="1"
                       android:adjustViewBounds="true"
                       android:src="@drawable/inat_logo_5"
                       android:layout_gravity="center_horizontal"
                   />

        	</LinearLayout>
        
    </LinearLayout>

</RelativeLayout>
