<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/project_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#003fb921"
            android:fitsSystemWindows="false"
            app:expandedTitleMarginBottom="25dp"
            app:expandedTitleTextAppearance="@style/Toolbar.TitleText"
            app:expandedTitleGravity="center_horizontal"
            app:collapsedTitleTextAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            app:contentScrim="#00214a9e"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:fitsSystemWindows="false"
                android:id="@+id/project_bg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                app:layout_collapseMode="parallax"
                />

            <View
                android:fitsSystemWindows="false"
                app:layout_collapseMode="parallax"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#4c000000"
                />


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center_horizontal"
                app:layout_collapseMode="pin"
                android:fitsSystemWindows="false"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            <RelativeLayout
                android:fitsSystemWindows="false"
                app:layout_collapseMode="parallax"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <RelativeLayout
                    android:id="@+id/project_pic_container"
                    android:background="@drawable/project_details_border"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="17dp"
                    android:layout_width="72dp"
                    android:layout_height="72dp" >
                    <ImageView
                        android:id="@+id/project_pic"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/ic_work_black_24dp"
                        android:padding="2dp"
                        />
                    <ImageView
                        android:id="@+id/project_pic_none"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/ic_work_black_24dp"
                        android:background="#dbdbdb"
                        android:tint="#ffffff"
                        android:padding="10dp"
                        android:visibility="gone"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:layout_marginBottom="37dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/join_leave_project"
                        android:background="@drawable/circular_button_semi_transparent"
                        android:layout_width="76dp"
                        android:layout_gravity="center_horizontal"
                        android:textAllCaps="true"
                        android:text="@string/join"
                        android:textColor="@drawable/circular_button_text"
                        android:textSize="12sp"
                        android:layout_height="30dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/project_news"
                        android:background="@drawable/circular_button_semi_transparent"
                        android:layout_width="92dp"
                        android:layout_gravity="center_horizontal"
                        android:textAllCaps="true"
                        android:text="@string/news"
                        android:textColor="@drawable/circular_button_text"
                        android:layout_marginLeft="10dp"
                        android:textSize="12sp"
                        android:layout_height="30dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/about_project"
                        android:background="@drawable/circular_button_semi_transparent"
                        android:layout_width="76dp"
                        android:layout_gravity="center_horizontal"
                        android:textAllCaps="true"
                        android:text="@string/about"
                        android:textColor="@drawable/circular_button_text"
                        android:layout_marginLeft="10dp"
                        android:textSize="12sp"
                        android:layout_height="30dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </RelativeLayout>




        </android.support.design.widget.CollapsingToolbarLayout>


            <TabHost
                android:id="@android:id/tabhost"
                android:layout_gravity="bottom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0" />

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0" />

                </LinearLayout>
            </TabHost>

    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:id="@+id/identifiers_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#F5F5F5"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <ProgressBar
            android:id="@+id/loading_identifiers_list"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/identifiers_list_empty"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="30dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="@string/no_people_found" />

        <RelativeLayout
            android:id="@+id/identifiers_list_header"
            android:background="#DCDCDC"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="@string/rank"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="@string/identifications"
                android:textSize="13sp" />

        </RelativeLayout>

        <ListView
            android:id="@+id/identifiers_list"
            android:layout_below="@id/identifiers_list_header"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/people_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#F5F5F5"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <ProgressBar
            android:id="@+id/loading_people_list"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/people_list_empty"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="30dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="@string/no_people_found" />

        <RelativeLayout
            android:id="@+id/people_list_header"
            android:background="#DCDCDC"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:paddingRight="15dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="@string/rank"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="@string/project_observations"
                android:textSize="13sp" />

        </RelativeLayout>

        <ListView
            android:id="@+id/people_list"
            android:layout_below="@id/people_list_header"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/species_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        android:background="#F5F5F5"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <ProgressBar
            android:id="@+id/loading_species_list"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:padding="30dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/species_list_empty"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="30dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="@string/no_species_found" />

        <ListView
            android:id="@+id/species_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/grid_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        android:background="#F5F5F5"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <ProgressBar
            android:id="@+id/loading_observations_grid"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="30dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/observations_grid_empty"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="30dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="@string/no_observations_found" />

        <org.inaturalist.android.GridViewExtended
            android:id="@+id/observations_grid"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:numColumns="3"
            android:verticalSpacing="3dp"
            android:horizontalSpacing="3dp"
            android:stretchMode="columnWidth"
            android:gravity="center"
            />

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
